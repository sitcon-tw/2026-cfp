---
import sitconLeaf from "@assets/img/sitcon_leaf.svg";
import sitconCircle from "@assets/img/sitcon_circle.svg";
import attendBtn from "@assets/hero/button/attend.svg";
import submitBtn from "@assets/hero/button/submit.svg";
import supportBtn from "@assets/hero/button/support.svg";
---

<header>
	<canvas id="bg"></canvas>
	<h1>Jam the Chaos</h1>
	<p class="location">2026/03/28 中央研究院人文社會科學館</p>
	<div class="button-container">
		<a href="#attend" class="button"><img src={attendBtn.src} alt="我要參與" /></a>
		<a href="#submit" class="button"><img src={submitBtn.src} alt="我要投稿" /></a>
		<a href="#support" class="button"><img src={supportBtn.src} alt="支持我們" /></a>
	</div>
	<img src={sitconLeaf.src} alt="Hero Background Graphics" class="sitcon-leaf" />
	<img src={sitconCircle.src} alt="Hero Background Graphics" class="sitcon-circle" />
	<div class="sitcon-banner">
		<span class="sitcon-text">SITCON 2026</span>
	</div>
</header>
<style>
	header {
		min-height: 100vh;
		position: relative;
		display: flex;
		flex-direction: column;
		justify-content: center;
		text-align: center;
		overflow: hidden;
		width: 100%;
		overflow: hidden;
		width: 100%;
	}

	header::after {
		content: "";
		position: absolute;
		bottom: 0;
		left: 0;
		width: 100%;
		height: 5vh;
		background: linear-gradient(to bottom, #01012100, #010121);
		pointer-events: none;
	}

	main {
		height: 100vh;
		background-color: #333;
	}

	h1 {
		color: #ffffffaa;
		-webkit-text-stroke: 2px #fff; /* white stroke */
		text-stroke: 2px #fff; /* experimental */
		font-family: "Orbitron", sans-serif;
		font-optical-sizing: auto;
		font-size: max(3rem, 9vw);
	}

	.location {
		font-size: 2rem;
		margin-top: 1rem;
	}

	.sitcon-leaf {
		position: absolute;
		bottom: 0;
		right: -10rem;
		z-index: -1;
		opacity: 0.9;
		-webkit-mask-image: -webkit-gradient(linear, left bottom, right top, 
		from(rgba(0,0,0,0)), to(rgba(0,0,0,1)));
		width: 50%;
		height: 50%;
		max-width: 100%;
		overflow: hidden;
	}

	.sitcon-circle {
		position: absolute;
		top: 0;
		left: -14rem;
		z-index: -1;
		opacity: 0.9;
	}

	.button-container {
		margin: 1.5rem auto;
		display: flex;
		gap: 1rem;
	}

	.location {
		font-size: 2rem;
		margin-top: 1rem;
	}

	.sitcon-leaf {
		position: absolute;
		bottom: 0;
		right: -10rem;
		z-index: -1;
		opacity: 0.9;
		-webkit-mask-image: -webkit-gradient(linear, left bottom, right top, 
		from(rgba(0,0,0,0)), to(rgba(0,0,0,1)));
		width: 50%;
		height: 50%;
		max-width: 100%;
		overflow: hidden;
	}

	.sitcon-circle {
		position: absolute;
		top: 0;
		left: -14rem;
		z-index: -1;
		opacity: 0.9;
	}

	.button-container {
		margin: 1.5rem auto;
		display: flex;
		gap: 1rem;
	}

	canvas#bg {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
	}

	.sitcon-banner {
		position: absolute;
		top: 4rem;
		right: -4.5rem;
		background-color: #4A4A4A;
		border: 2px solid #E0E0E0;
		border-radius: 10rem;
		padding: 1rem 6rem 1rem 2rem;
		z-index: 10;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
	}

	.sitcon-text {
		color: #4A4A4A;
		font-family: "Orbitron", sans-serif;
		font-weight: bold;
		font-size: 2.5rem;
		-webkit-text-stroke: 1px #E0E0E0;
		text-stroke: 1px #E0E0E0;
		text-transform: uppercase;
	}

	@media (max-width: 768px) {
		h1 {
			font-size: 4rem;
		}

		.sitcon-banner {
			top: 2rem;
			right: -3rem;
			padding: 1rem 4rem 1rem 2rem;
		}

		.location {
			font-size: 1.1rem;
			margin-top: 0;
			white-space: wrap;
		}

		.button {
			scale: 0.9;
		}

		.button-container {
			flex-direction: column;
			gap: 0;
		}

		.sitcon-banner {
			top: 1rem;
			right: -3rem;
			padding: 0.75rem 4rem 0.75rem 2rem;
		}

		.sitcon-text {
			font-size: 1.2rem;
		}

		.sitcon-leaf {
			right: 0;
		}

		.sitcon-circle {
			top: -7rem;
			scale: 0.6;
		}
	}
</style>

<script src="@assets/bg.js"></script>

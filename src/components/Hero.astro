---
import sitconLeaf from "@assets/img/sitcon_leaf.svg";
import sitconCircle from "@assets/img/sitcon_circle.svg";
import attendBtn from "@assets/hero/button/attend.svg";
import submitBtn from "@assets/hero/button/submit.svg";
import supportBtn from "@assets/hero/button/support.svg";
---

<header>
	<canvas id="bg" aria-hidden="true"></canvas>
	<h1>Jam the Chaos</h1>
	<p class="location">2026/03/28 中央研究院人文社會科學館</p>
	<div class="button-container" aria-label="主要操作導覽">
		<a href="#attend" class="button" aria-label="我要參與 SITCON 2026"><img src={attendBtn.src} alt="" role="presentation" /></a>
		<a href="#submit" class="button" aria-label="我要投稿 SITCON 2026"><img src={submitBtn.src} alt="" role="presentation" /></a>
		<a href="#support" class="button" aria-label="支持我們 SITCON 2026"><img src={supportBtn.src} alt="" role="presentation" /></a>
	</div>
	<img src={sitconLeaf.src} alt="" aria-hidden="true" class="sitcon-leaf" />
	<img src={sitconCircle.src} alt="" aria-hidden="true" class="sitcon-circle" />
	<div class="sitcon-banner" aria-label="SITCON 2026">SITCON 2026</div>
</header>

<style>
	header {
		min-height: calc(100vh - 3rem);
		position: relative;
		display: flex;
		flex-direction: column;
		justify-content: center;
		text-align: center;
		overflow: hidden;
		width: 100%;
		padding: 1rem;
	}

	header::after {
		content: "";
		position: absolute;
		bottom: 0;
		left: 0;
		width: 100%;
		height: 5vh;
		background: linear-gradient(to bottom, #01012100, #010121);
		pointer-events: none;
	}

	main {
		height: 100vh;
		background-color: #333;
	}

	h1 {
		color: var(--white) aa;
		-webkit-text-stroke: 2px var(--white); /* white stroke */
		text-stroke: 2px var(--white); /* experimental */
		font-family: "Orbitron", sans-serif;
		font-optical-sizing: auto;
		font-size: max(3rem, 9vw);
	}

	.location {
		font-size: 2rem;
		margin-top: 1rem;
		text-wrap: balance;
	}

	.sitcon-leaf {
		position: absolute;
		bottom: 0;
		right: -10rem;
		z-index: -1;
		opacity: 0.9;
		-webkit-mask-image: -webkit-gradient(linear, left bottom, right top, from(rgba(0, 0, 0, 0)), to(rgba(0, 0, 0, 1)));
		width: 50%;
		height: 50%;
		max-width: 100%;
		overflow: hidden;
	}

	.sitcon-circle {
		position: absolute;
		top: 0;
		left: -14rem;
		z-index: -1;
		opacity: 0.9;
	}

	.button-container {
		margin: 1.5rem auto;
		display: flex;
		gap: 1rem;
	}

	canvas#bg {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		background-color: #000;
	}

	.sitcon-banner {
		position: absolute;
		top: 4rem;
		right: 0;
		background-color: #4a4a4a;
		border: 2px solid #e0e0e0;
		border-right: 0;
		border-radius: 100rem 0 0 100rem;
		padding: 1rem 1.5rem 1rem 2rem;
		z-index: 10;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
		color: #4a4a4a;
		font-family: "Orbitron", sans-serif;
		font-weight: bold;
		font-size: 2.5rem;
		-webkit-text-stroke: 1px #e0e0e0;
		text-stroke: 1px #e0e0e0;
		text-transform: uppercase;
	}
	.button {
		transition: transform 0.2s;
	}
	.button:hover {
		transform: scale(1.05);
	}

	@media (max-width: 768px) {
		h1 {
			font-size: 4rem;
		}

		.sitcon-banner {
			top: 2rem;
			padding: 0.75rem 1rem 0.75rem 2rem;
			font-size: 1.5rem;
		}

		.location {
			font-size: 1.1rem;
			margin-top: 0;
			white-space: wrap;
		}

		.button {
			scale: 0.8;
		}

		.button-container {
			flex-direction: column;
			gap: 0;
		}

		.sitcon-leaf {
			right: 0;
		}

		.sitcon-circle {
			top: -7rem;
			scale: 0.6;
		}
	}
</style>

<script src="@assets/bg.js"></script>

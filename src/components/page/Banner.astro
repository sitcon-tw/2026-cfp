---
const { btn_url, h3, h2 } = Astro.props;

import StarIcon from "@assets/desc_page/star.svg";

import BannerBgIcon from "@assets/desc_page/banner_bg_icon.webp";
import BannerTransitionIcon from "@assets/desc_page/banner_tran.svg";
import BannerTransitionIcon2 from "@assets/desc_page/banner_tran2.svg";
---

<div class="banner-section">
	<img src={BannerTransitionIcon.src} class="banner-transition" alt="banner transition" />
	<img src={BannerTransitionIcon2.src} class="banner-transition banner2" alt="banner transition" />
	<div class="banner">
		<div class="banner-container">
			<div class="banner-text">{h3}</div>
			<img src={BannerBgIcon.src} class="bg-icon" alt="banner background" />
			<h2 class="banner-title" set:html={h2} />
			<a class="banner-button" href={btn_url} target="_blank" rel="noopener" aria-label="立即投稿">
				<StarIcon />
				<span>立即投稿</span>
				<StarIcon />
			</a>
		</div>
	</div>
</div>

<style>
	.banner-section {
		position: relative;
		width: 100%;
		overflow: hidden;
	}
	.banner {
		position: relative;
		padding: 4rem 4rem 7rem 4rem;
		width: 100%;
		background: var(--white);
		font-weight: bold;
		z-index: 10;
	}

	.banner-container {
		max-width: 60rem;
		margin: auto;
	}

	.banner-transition {
		display: block;
		width: 140%;
		height: auto;
		pointer-events: none;
		animation: wave-flow-left 18s linear infinite;
		will-change: transform;
		margin-left: -20%;
		filter: drop-shadow(0 3px 6px rgba(0, 0, 0, 0.12));
		transform-origin: center center;
	}

	.banner2 {
		position: absolute;
		top: 0.6rem;
		left: -20%;
		z-index: 10;
		width: 140%;
		height: auto;
		animation: wave-flow-right 10s linear infinite;
		will-change: transform;
		filter: drop-shadow(0 2px 5px rgba(0, 0, 0, 0.18));
		animation-delay: -4s;
		transform-origin: center center;
	}

	@keyframes wave-flow-left {
		0% {
			transform: translateX(0) translateY(0) scaleX(1) scaleY(1);
		}
		8% {
			transform: translateX(-15px) translateY(-2px) scaleX(1.01) scaleY(1.005);
		}
		16% {
			transform: translateX(-30px) translateY(-4px) scaleX(1.02) scaleY(1.008);
		}
		24% {
			transform: translateX(-45px) translateY(-6px) scaleX(1.03) scaleY(1.01);
		}
		32% {
			transform: translateX(-60px) translateY(-8px) scaleX(1.05) scaleY(1.012);
		}
		40% {
			transform: translateX(-75px) translateY(-10px) scaleX(1.07) scaleY(1.014);
		}
		48% {
			transform: translateX(-90px) translateY(-12px) scaleX(1.08) scaleY(1.015);
		}
		56% {
			transform: translateX(-75px) translateY(-10px) scaleX(1.07) scaleY(1.014);
		}
		64% {
			transform: translateX(-60px) translateY(-8px) scaleX(1.05) scaleY(1.012);
		}
		72% {
			transform: translateX(-45px) translateY(-6px) scaleX(1.03) scaleY(1.01);
		}
		80% {
			transform: translateX(-30px) translateY(-4px) scaleX(1.02) scaleY(1.008);
		}
		88% {
			transform: translateX(-15px) translateY(-2px) scaleX(1.01) scaleY(1.005);
		}
		100% {
			transform: translateX(0) translateY(0) scaleX(1) scaleY(1);
		}
	}

	@keyframes wave-flow-right {
		0% {
			transform: translateX(0) translateY(0) scaleX(1) scaleY(1);
		}
		10% {
			transform: translateX(18px) translateY(2px) scaleX(0.99) scaleY(0.997);
		}
		20% {
			transform: translateX(36px) translateY(4px) scaleX(0.98) scaleY(0.994);
		}
		30% {
			transform: translateX(54px) translateY(6px) scaleX(0.97) scaleY(0.992);
		}
		40% {
			transform: translateX(72px) translateY(8px) scaleX(0.96) scaleY(0.99);
		}
		50% {
			transform: translateX(90px) translateY(10px) scaleX(0.95) scaleY(0.988);
		}
		60% {
			transform: translateX(110px) translateY(12px) scaleX(0.94) scaleY(0.986);
		}
		70% {
			transform: translateX(90px) translateY(10px) scaleX(0.95) scaleY(0.988);
		}
		80% {
			transform: translateX(72px) translateY(8px) scaleX(0.96) scaleY(0.99);
		}
		90% {
			transform: translateX(36px) translateY(4px) scaleX(0.98) scaleY(0.994);
		}
		100% {
			transform: translateX(0) translateY(0) scaleX(1) scaleY(1);
		}
	}

	.banner-text,
	.banner-title {
		font-size: 2rem;
		background: linear-gradient(90deg, #2aa6ff, #009dff, #f8981d, #e84b1c);
		background-clip: text;
		-webkit-text-fill-color: transparent;
		color: transparent;
		color: red;
		max-width: fit-content;
	}

	.banner-title {
		font-size: 2.5rem;
		margin-bottom: 2.5rem;
	}

	.banner-text {
		margin-bottom: 2rem;
	}

	.banner-button {
		display: flex;
		align-items: center;
		justify-content: center;
		border-radius: 1000px;
		color: var(--white);
		background: #1e2c7a;
		font-size: 1.8rem;
		padding: 1rem 3rem;
		text-decoration: none;
		width: fit-content;
		gap: 1rem;
		transition: background 0.3s ease;
	}

	.banner-button:hover {
		background: rgb(63, 107, 170);
	}

	.banner-button svg {
		transition: transform 0.2s ease;
	}

	.banner-button:hover svg {
		transform: rotate(180deg);
	}

	.banner-button:hover svg:last-child {
		transform: rotate(-180deg);
	}

	.banner-button:active {
		background: #274374;
	}

	.banner-button svg {
		width: 1.5rem;
		height: 1.5rem;
	}

	.bg-icon {
		position: absolute;
		max-width: 20rem;
		bottom: 0;
		right: 3rem;
		opacity: 0.1;
		pointer-events: none;
		z-index: 0;
		animation: vibe 6s ease-in-out infinite;
	}

	@media (max-width: 768px) {
		.banner-button {
			font-size: 1.5rem;
			padding: 0.75rem 2rem;
		}

		.banner {
			padding: 3rem 2rem 3rem 2rem;
		}

		.banner-title {
			font-size: 2rem;
		}
	}

	@keyframes vibe {
		0%,
		100% {
			transform: translateY(5%);
		}
		50% {
			transform: translateY(-5%);
		}
	}
</style>
